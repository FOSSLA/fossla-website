---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const resources = await getCollection("resources");
const external = resources.filter((item) => item.data.kind === "external");
const community = resources.filter((item) => item.data.kind === "community");
const tools = resources.filter((item) => item.data.kind === "tool");
---
<BaseLayout title="Learning Resources" description="Curated tools, documentation, and learning materials for your FOSS journey.">
  <section class="container mx-auto px-4 pt-24 pb-20">
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <h1 class="mb-6 text-4xl font-bold md:text-5xl">
        Learning <span class="text-primary">Resources</span>
      </h1>
      <p class="text-xl text-muted-foreground">
        Curated tools, documentation, and learning materials for your FOSS journey.
      </p>
    </div>

    <div class="mb-16">
      <h2 class="mb-8 text-3xl font-bold">External Resources</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {external.map((resource) => (
          <article class="rounded border border-border bg-card/40 p-6 transition hover:border-primary/50">
            <div class="mb-4 flex items-start justify-between">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                {resource.data.icon && <Icon name={resource.data.icon} class="h-6 w-6 text-primary" />}
              </div>
              <span class="rounded bg-primary/10 px-2 py-1 text-xs font-semibold text-primary">{resource.data.category}</span>
            </div>
            <h3 class="mb-2 text-xl font-semibold">{resource.data.title}</h3>
            <p class="mb-4 text-sm text-muted-foreground">{resource.data.description}</p>
            {resource.data.url && (
              <a
                href={resource.data.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex w-full items-center justify-center rounded border border-border px-4 py-2 text-sm font-semibold hover:border-primary"
              >
                Visit Resource
                <Icon name="lucide:external-link" class="ml-2 h-4 w-4" />
              </a>
            )}
          </article>
        ))}
      </div>
    </div>

    <div class="mb-16">
      <h2 class="mb-8 text-3xl font-bold">Community Resources</h2>
      <div class="grid gap-6 md:grid-cols-3">
        {community.map((resource) => (
          <article class="rounded border border-border bg-card/40 p-6 transition hover:border-primary/50">
            <span class="mb-3 inline-flex rounded bg-primary/10 px-2 py-1 text-xs font-semibold text-primary">{resource.data.category}</span>
            <h3 class="mb-2 text-xl font-semibold">{resource.data.title}</h3>
            <p class="mb-4 text-sm text-muted-foreground">{resource.data.description}</p>
            {resource.data.url && (
              <a href={resource.data.url} class="inline-flex w-full items-center justify-center rounded border border-border px-4 py-2 text-sm font-semibold hover:border-primary">
                Download
              </a>
            )}
          </article>
        ))}
      </div>
    </div>

    <div>
      <h2 class="mb-8 text-3xl font-bold">Recommended FOSS Tools</h2>
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        {tools.map((tool) => (
          <article class="rounded border border-border bg-card/40 p-5 transition hover:border-primary/50">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold">{tool.data.title}</h3>
              <span class="rounded bg-secondary px-2 py-1 text-xs font-semibold text-foreground">{tool.data.category}</span>
            </div>
            <p class="mt-3 text-sm text-muted-foreground">{tool.data.description}</p>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
